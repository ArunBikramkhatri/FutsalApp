<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:translationZ="10dp">

        <LinearLayout
            android:id="@+id/fixtureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/fixtureTeamOneImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:src="@drawable/players"></ImageView>

            <TextView
                android:id="@+id/fixtureTeamOneName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="0.3"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="VS"
                android:textSize="20dp"
                android:gravity="center"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/fixtureTeamTwoName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="0.3"></TextView>

            <ImageView
                android:id="@+id/fixtureTeamTwoImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:src="@drawable/players"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>