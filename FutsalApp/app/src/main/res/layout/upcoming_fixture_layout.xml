<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcomingFixturesLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:translationZ="5dp"
    app:cardBackgroundColor="@color/transparent_white"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border_white"
        android:weightSum="1">

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upcomingFixtureTeamOneLogo"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mancity"></ImageView>

            <TextView
                android:id="@+id/upcomingFixtureTeamOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ManCity"
                android:textColor="@color/white"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center">
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textAlignment="center">
                ></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/upcomingFixtureTeamTwoLogo"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/bogatiteam"></ImageView>

            <TextView
                android:id="@+id/upcomingFixtureTeamTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ManUnited"
                android:textColor="@color/white"
                android:textAlignment="center"></TextView>

        </LinearLayout>

    </LinearLayout>

