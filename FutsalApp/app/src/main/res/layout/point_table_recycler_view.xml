<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:background="@color/darkBlue"
    tools:context=".ui.PointsTableFragment">

<androidx.cardview.widget.CardView
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="15dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fixturesColor"
            android:text="@string/table_standings"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"></TextView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/fixturesColor"
            android:weightSum="1">

            <TextView
                android:id="@+id/pointsLogo"
                android:layout_width="0dp"
                android:layout_marginVertical="5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="Captain"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

            <!--        <TextView-->
            <!--            android:id="@+id/captainName"-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:text="Man City"-->
            <!--            android:gravity="center"-->
            <!--            android:textColor="@color/white"-->
            <!--            android:layout_weight="0.4"></TextView>-->
            <TextView
                android:id="@+id/win"
                android:layout_marginVertical="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="W"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_marginVertical="5dp"
                android:id="@+id/draw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="D"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_marginVertical="5dp"
                android:id="@+id/lose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_marginVertical="5dp"
                android:id="@+id/points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Points"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/point_table_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>