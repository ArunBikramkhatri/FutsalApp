<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/border_white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/goalScorerPhoto"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:src="@drawable/mancity"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/goalScorerName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Arun"

            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_weight="0.7"></TextView>
        <TextView
            android:id="@+id/goalScored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="0.1"></TextView>


    </LinearLayout>

</LinearLayout>