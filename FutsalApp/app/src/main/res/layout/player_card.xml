      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/player_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleX="0.7"
          android:scaleY="0.7"
          app:shapeAppearanceOverlay="@style/circular"
          app:srcCompat="@mipmap/ic_launcher"
          tools:ignore="MissingConstraints"></com.google.android.material.imageview.ShapeableImageView>
      <TextView
          android:id="@+id/player_card_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10dp"
          android:text="Player"
          app:layout_constraintEnd_toEndOf="@+id/player_img"
          app:layout_constraintStart_toStartOf="@+id/player_img"
          app:layout_constraintTop_toBottomOf="@+id/player_img"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>