<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/app_view_pager"
        android:layout_width="match_parent"
        android:background="@color/darkBlue"
        android:layout_height="0dp"
        android:layout_weight="0.92"></androidx.viewpager2.widget.ViewPager2>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:translationZ="10dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            app:backgroundTint="@color/darkBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/darkBlue"
            app:itemIconTint="@color/bottom_nav_color"

            app:menu="@menu/custom_menu"></com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.cardview.widget.CardView>

</LinearLayout>