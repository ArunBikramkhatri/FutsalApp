<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_white"
    >

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
    <ImageView
        android:id="@+id/pointsLogo"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0.2"
        android:src="@drawable/mancity"></ImageView>

    <TextView
        android:id="@+id/captainName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Man City"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_weight="0.3"></TextView>
    <TextView
        android:id="@+id/win"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="3"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_weight="0.1"></TextView>

    <TextView
        android:id="@+id/draw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_weight="0.1"></TextView>
    <TextView
        android:id="@+id/lose"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="0"
        android:textColor="@color/white"
        android:layout_weight="0.1"></TextView>
    <TextView
        android:id="@+id/points"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="9"
        android:textColor="@color/white"
        android:layout_weight="0.2"></TextView>

    </LinearLayout>
</LinearLayout>